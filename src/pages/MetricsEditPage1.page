<apex:page standardController="Metrics__c" showHeader="true" sidebar="true" extensions="MetricsEditDetailPage_Ctrl">

	<apex:form >

		<apex:pageBlock title="Metric Edit" id="Panel1" >

			<apex:pageBlockButtons >
	            <apex:commandButton value="Save" action="{!save}"/>
	            <apex:commandButton value="Save & New" action="{!performSaveAndNewNavigation}"/>
	            <apex:commandButton value="Next" action="{!performNextNavigation}"/>
	            <apex:commandButton value="Cancel" action="{!cancel}"/>
	        </apex:pageBlockButtons>

			<apex:pageBlockSection title="Details" collapsible="False" columns="1">

				<apex:repeat value="{!$ObjectType.Metrics__c.FieldSets.Details}" var="f"> 
				    <apex:inputField value="{!Metrics__c[f]}"/>
				</apex:repeat>

			</apex:pageBlockSection>

		</apex:pageBlock>

	</apex:form>

</apex:page>